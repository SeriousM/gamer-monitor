<h3>Users</h3>
<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Registered</th>
          <th>Roles</th>
      </tr>
  </thead>   
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at.to_date %></td>
      <td><%= user.roles.collect{ |r| r.name.titleize }.join(', ') unless user.roles.first.nil? %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>