=simple_form_for(@wot_character, url: wot_index_path, :html => { :class => 'form-horizontal' }) do |f|
  =f.input :account_id, :input_html => { :class => "span6" }
  =f.input :name, :input_html => { :class => "span6" }
  =f.input :region, :collection => WotCharacter.region_enum, :selected => WotCharacter.region_enum.first, :input_html => { :class => "span6" }
  =f.button :submit, :class => 'btn-primary'