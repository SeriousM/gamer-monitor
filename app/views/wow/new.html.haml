=simple_form_for(@wow_character, url: wow_index_path, :html => { :class => 'form-horizontal' }) do |f|
  =f.input :name, :input_html => { :class => "span6" }
  =f.input :server, :input_html => { :class => "span6" }
  =f.input :region, :collection => WowCharacter.region_enum, :selected => WowCharacter.region_enum.first, :input_html => { :class => "span6" }
  =f.button :submit, :class => 'btn-primary'